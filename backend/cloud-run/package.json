{
  "name": "indialawai-api",
  "version": "1.0.0",
  "description": "IndiaLawAI Backend API - Cloud Run Service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "deploy": "gcloud run deploy indialawai-api --source . --region asia-south1 --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/documentai": "^7.1.0",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/pubsub": "^4.0.1",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/translate": "^8.0.0",
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/vertexai": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "puppeteer": "^21.6.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}

